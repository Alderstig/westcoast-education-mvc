@model App.ViewModels.EditParticipantViewmodel

<form asp-controller="Participants" asp-action="Edit" method="POST">
    <div class="card">
        <div class="card-header">
            <h4>Editera användarinfo för befintlig användare</h4>
        </div>
        <div class="card-body p-3">
            <div class="mb-3">
                <label class="form-label" asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="MobileNum"></label>
                <input class="form-control" asp-for="MobileNum" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Adress"></label>
                <input class="form-control" asp-for="Adress" />
            </div>
            <hr>
            <button id="save" type="submit" class="btn btn-primary">Spara</button>
        </div>
    </div>
</form>